{
  "name": "timestamp-microservice-fastify-ts",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Jake Klassen",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "shx rm -rf dist",
    "prebuild": "yarn run clean",
    "build": "node --loader tsm src/build.ts",
    "build:only": "node --loader tsm src/build.ts",
    "compile-schemas": "json2ts -i src/schemas -o src/types",
    "premigrate": "yarn build",
    "migrate": "node -r dotenv/config dist/migrate.js",
    "watch": "tsc --watch",
    "start": "nodemon",
    "migrate:test": "DOTENV_CONFIG_PATH=.env.test node -r dotenv/config dist/migrate.js up",
    "pretest": "run-s build migrate:test",
    "test": "DOTENV_CONFIG_PATH=.env.test node -r dotenv/config node_modules/uvu/bin.js -i src --bail",
    "prod": "node ./dist",
    "typecheck": "tsc"
  },
  "imports": {
    "#app/*": [
      "./dist/*"
    ]
  },
  "dependencies": {
    "awilix": "^6.0.0",
    "bson": "^4.5.4",
    "change-case": "^4.1.2",
    "comment-json": "^4.1.0",
    "convict": "^6.2.1",
    "faker": "^5.5.3",
    "fastify": "^3.24.0",
    "fp-ts": "^2.11.5",
    "http-status-codes": "^2.1.4",
    "io-ts": "^2.2.16",
    "json-schema-to-typescript": "^10.1.5",
    "mongodb": "^4.2.0",
    "mongoose": "^6.0.13",
    "monocle-ts": "^2.3.11",
    "newtype-ts": "^0.3.4",
    "pino-http": "^6.0.0",
    "pino-pretty": "^7.2.0",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.5.2",
    "umzug": "github:sequelize/umzug"
  },
  "devDependencies": {
    "@types/convict": "^6.1.1",
    "@types/faker": "^5.5.9",
    "@types/node": "^16.11.9",
    "@types/pino-http": "^5.8.1",
    "@types/wtfnode": "^0.7.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "clipboardy": "^3.0.0",
    "dotenv": "^10.0.0",
    "esbuild": "^0.13.15",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "expect": "^27.3.1",
    "get-port": "^6.0.0",
    "get-port-cli": "^3.0.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "shx": "^0.3.2",
    "tiny-glob": "^0.2.9",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.4.0",
    "tsm": "^2.1.4",
    "uvu": "^0.5.2",
    "wtfnode": "^0.9.1"
  }
}
